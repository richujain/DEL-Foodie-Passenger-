<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/heading"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:text="Billing Details"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:id="@+id/grossAmountInDelivery"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grossAmountInDelivery"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:id="@+id/totalDistance"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalDistance"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:id="@+id/deliveryCharge"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deliveryCharge"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:gravity="center"
        android:id="@+id/amountToPay"
        android:text="Amount To Pay : $"
        />





    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/paymentOptions"
        android:text="Show Payment Options"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/button_rounded_corner"/>

</RelativeLayout>